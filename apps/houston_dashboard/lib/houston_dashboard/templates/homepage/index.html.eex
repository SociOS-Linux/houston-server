<section>
  <div class="grid">
    <div class="two-thirds">
      <img src="/images/vala.svg">
      <h2>Vala. A Modern, Fast, Open Source Language.</h2>
    </div>
  </div>
  <div class="grid">
    <div class="third">
      <i class="fa fa-cube"></i>
      <p>Familiar to anyone who's seen C#, but maintains API/ABI compatibility with C</p>
    </div>
    <div class="third">
      <i class="fa fa-rocket"></i>
      <p>Low memory requirements, native execution, and purpose-built for GObject</p>
    </div>
    <div class="third">
      <i class="fa fa-cogs"></i>
      <p>Signals, properties, generics, lambdas, assisted memory management, exception handling, type inference, async/yield & more</p>
    </div>
  </div>
  <div class="grid">
    <div class="two-thirds">
<pre><code>public class MyApp : Gtk.Application {

    public MyApp () {
        Object (application_id: "com.github.myteam.myapp",
        flags: ApplicationFlags.FLAGS_NONE);
    }

    protected override void activate () {
        var window = new Gtk.ApplicationWindow (this);
        window.title = "MyApp";
        window.set_default_size (1024, 768);
        window.show_all ();
    }

    public static int main (string[] args) {
        var app = new MyApp ();
        return app.run (args);
    }
}</code></pre>
    </div>
  </div>
  <div class="grid">
    <div class="whole">
      <p>Full API documentation available on</p>
      <a class="button suggested-action valadoc" href="http://valadoc.elementary.io"><img src="images/valadoc_logo.svg" alt="Valadoc" target="_blank"></a>
    </div>
  </div>
</section>

